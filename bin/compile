BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

if [ -f "$ENV_DIR/SSH_KEY" ]; then
    echo 'No SSH key found';
    exit 1;
fi

mkdir -p ~/.ssh/
chmod 700 ~/.ssh/

# Install the ssh key
# Use mv instead of cp as, for security, we don't want the application to have
# access to the deploy key at runtime
mv "$ENV_DIR/SSH_KEY" ~/.ssh/id_rsa
chmod 400 ~/.ssh/id_rsa

# If StrictHostChecking is not disabled ssh will bring up an interactive prompt
# when trying to connect to a host for the first time and block installation
echo 'StrictHostKeyChecking=no' > ~/.ssh/config
chmod 600 ~/.ssh/config
